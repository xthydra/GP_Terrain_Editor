form GenerateNoiseForm
{
    theme = res/common/default.theme
    width = 400
    height = 600
    alignment = ALIGN_VCENTER_HCENTER
    layout = LAYOUT_VERTICAL
    style = noBorder
       
	container AmplitudeContainer
	{
        layout = LAYOUT_FLOW
        width = 450
        height = 45
        radioButton AmplitudePositiveRadio
        {
            group = AmplitudeTypeGroup
            text = + Amplitude
            selected = true
            height = 45
            width = 180
        }
        radioButton AmplitudeNegativeRadio
        {
            group = AmplitudeTypeGroup
            text = - Amplitude
            height = 45
            width = 200
        }
    }      
    slider AmplitudeSlider
    {
        text = Amplitude
        min = 1.0
        max = 10.0
        value = 1.0
        step = 0.2
        height = 45
        width = 400
    }
	container GainContainer
	{
        layout = LAYOUT_FLOW
        width = 450
        height = 45
        radioButton GainPositiveRadio
        {
            group = GainTypeGroup
            text = + Gain
            selected = true
            height = 45
            width = 180
        }
        radioButton GainNegativeRadio
        {
            group = GainTypeGroup
            text = - Gain
            height = 45
            width = 200
        }
    }
    slider GainSlider
    {
        text = Gain
        min = 1.0
        max = 10.0
        value = 1.0
        step = 0.2
        height = 45
        width = 400
    }
    container NoiseContainer
	{
        layout = LAYOUT_FLOW
        width = 450
        height = 45
        radioButton SimplexNoiseRadio
        {
            group = NoiseTypeGroup
            text = Simplex 
            selected = true
            height = 45
            width = 180
        }
        radioButton DiamondNoiseRadio
        {
            group = NoiseTypeGroup
            text = Diamond Square
            height = 45
            width = 200
        }
    }
    container ButtonContainer
	{
        layout = LAYOUT_FLOW
        width = 450
        height = 45
        
        button CancelNoiseButton
		{
            text = Cancel
            height = 45
            width = 200
        }
        button ConfirmNoiseButton
		{
            text = Confirm
            height = 45
            width = 200
        }
    } 

}
